<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo2" />
        <EditText
            android:hint="        Your name        "
            android:textSize="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="12dp"
            android:textColor="#03A9F4"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Update profile"
        android:textSize="35dp"
        android:textColor="#03A9F4"
        android:layout_gravity="center"
        android:textStyle="bold"/>
    <EditText
        android:hint="Name                      "
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Day of birth"
            android:textSize="20dp"
            android:layout_marginRight="8dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Age"
            android:textSize="20dp"
            android:layout_marginRight="1dp"/>
        <androidx.appcompat.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Female"
            android:layout_marginTop="3dp"
            android:textSize="15dp"/>
        <androidx.appcompat.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Male"
            android:layout_marginTop="3dp"
            android:textSize="15dp"/>
        <androidx.appcompat.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Other"
            android:layout_marginTop="3dp"
            android:textSize="15dp"/>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Job"
        android:textSize="20dp"/>
    <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Professional titles"
    android:textSize="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:textSize="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textSize="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Mobile phone               "
            android:textSize="20dp"
            android:layout_marginRight="10dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="ID number                    "
            android:textSize="20dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Sign"
        android:textSize="20dp"
        android:layout_marginLeft="265dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="240dp"
        android:text="                   " />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="         Your name"
        android:textSize="25dp"
        android:textColor="#03A9F4"
        android:layout_marginLeft="170dp"/>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <Button
            android:id="@+id/upbuttoncancel"
            android:text="Cancel"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginRight="50dp"
            android:background="#1C90EC"
            android:textColor="#F9FAFA"/>
        <Button
            android:id="@+id/upbuttonaccept"
            android:text="Accept"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="#1C90EC"
            android:textColor="#F9FAFA"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="© Copyright 2020™ by Bao Dang"
        android:textSize="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textColor="#03A9F4"
        android:textStyle="bold"/>
</LinearLayout>
